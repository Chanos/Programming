<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="ManualProcessRunner.MainWindow"
        Title="MainWindow" Height="427" Width="680" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" Background="#FF0BD1FD">
    <Grid>
        <Border BorderThickness="3" HorizontalAlignment="Left" Height="427" VerticalAlignment="Top" Width="680" BorderBrush="#FF0C93F0">
            <Border.Effect>
                <DropShadowEffect/>
            </Border.Effect>
            <Grid Margin="7">
                <Grid.Background>
                    <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                        <GradientStop Color="#FFA2D9EA" Offset="1"/>
                        <GradientStop Color="White"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Button Content="X" HorizontalAlignment="Left" Margin="633,10,0,0" VerticalAlignment="Top" Width="17" Height="19" Background="#FFF90000" BorderBrush="#FF00DCFF" Foreground="White" Click="Exit"/>
            </Grid>
        </Border>
    </Grid>
</Window>
