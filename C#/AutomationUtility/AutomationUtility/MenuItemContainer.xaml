<UserControl x:Class="AutomationUtility.MenuItemContainer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="101" d:DesignWidth="480" Tap="Alert" Margin="0, 20" BorderBrush="#00000000">
    
    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneChromeBrush}">
        <TextBlock Name="menuItemText"  Margin="37,20,41,0" TextWrapping="Wrap" Text="menuItemText" Height="48" Width="402" FontSize="36" VerticalAlignment="Top"/>
        <Rectangle Fill="#FF30D6F0" Height="3" Margin="0,84,0,0" Stroke="Black" VerticalAlignment="Top"/>
        <Rectangle Fill="#FF30D6F0" Height="3" Stroke="Black" VerticalAlignment="Top"/>

    </Grid>
</UserControl>